{
  "name": "mia-aesthetics-theme",
  "version": "3.0.0",
  "description": "Mia Aesthetics WordPress Theme",
  "private": true,
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bootstrap": "^5.3.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "scripts": {
    "build:vendor": "node scripts/build-vendor.js",
    "lint:js": "eslint \"assets/js/**/*.js\" \"scripts/**/*.js\"",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "format": "prettier --write \"**/*.{js,css,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,css,json,md}\" --ignore-path .prettierignore",
    "lint": "npm run lint:js && npm run lint:css",
    "phpcs": "powershell \".\\vendor\\bin\\phpcs --standard=.\\phpcs.xml\"",
    "phpcs:fix": "powershell \".\\vendor\\bin\\phpcbf --standard=.\\phpcs.xml\"",
    "phpstan": "powershell \".\\vendor\\bin\\phpstan analyze --memory-limit=2G\""
  }
}
