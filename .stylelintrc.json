{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order", "stylelint-declaration-strict-value"],
  "rules": {
    "order/properties-alphabetical-order": true,

    "scale-unlimited/declaration-strict-value": [
      ["/color$/", "font-family"],
      {
        "ignoreValues": ["inherit", "transparent", "currentColor", "none", "initial", "unset"],
        "disableFix": true,
        "message": "Use CSS variable from base.css instead of hardcoded value"
      }
    ],

    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "custom-property-pattern": null,
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": null,
    "at-rule-no-vendor-prefix": null,
    "selector-no-vendor-prefix": null,
    "color-hex-length": null,
    "color-function-notation": null,
    "alpha-value-notation": null,
    "font-family-name-quotes": null,
    "value-keyword-case": null,
    "media-feature-range-notation": null,
    "function-url-quotes": null,
    "font-family-no-missing-generic-family-keyword": null,
    "no-descending-specificity": null,
    "declaration-block-no-redundant-longhand-properties": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["tap-highlight-color", "box-orient"]
      }
    ]
  },
  "ignoreFiles": [
    "**/*.min.css",
    "**/bootstrap/**",
    "**/fontawesome/**",
    "**/glide/**",
    "theme-bundle/**",
    "assets/vendor/**"
  ]
}
