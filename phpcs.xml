<?xml version="1.0"?>
<ruleset name="Mia Aesthetics WordPress">
    <description>PHP_CodeSniffer configuration for Mia Aesthetics WordPress theme</description>

    <!-- Check all PHP files in the theme -->
    <file>.</file>
    
    <!-- Only scan PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Exclude third party code and duplicates -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/theme-bundle/*</exclude-pattern>
    <exclude-pattern>*/assets/vendor/*</exclude-pattern>
    <exclude-pattern>*/.claude/*</exclude-pattern>
    
    <!-- Show progress and use colors -->
    <arg value="p"/>
    <arg name="colors"/>
    
    <!-- Memory and performance settings -->
    <ini name="memory_limit" value="512M"/>

    <!-- Use WordPress coding standards -->
    <rule ref="WordPress"/>

    <!-- PHP cross-version compatibility (targeting supported runtime range) -->
    <config name="testVersion" value="8.1-8.4"/>
    <rule ref="PHPCompatibility"/>

    <!-- Allow for theme specific customizations -->
    <rule ref="WordPress.Files.FileName.InvalidClassFileName">
        <exclude-pattern>*/inc/*</exclude-pattern>
    </rule>
    
    <!-- Custom theme functions that handle escaping internally -->
    <rule ref="WordPress.Security.EscapeOutput">
        <properties>
            <property name="customAutoEscapedFunctions" type="array">
                <!-- Custom theme functions that handle escaping internally -->
                <!-- Note: Removed the_field/the_sub_field as they don't auto-escape -->
            </property>
        </properties>
    </rule>
    
    <!-- Allow GET parameters for filtering/display (no CSRF risk) -->
    <rule ref="WordPress.Security.NonceVerification.Recommended">
        <exclude-pattern>*/archive-special.php</exclude-pattern>
    </rule>
</ruleset>
