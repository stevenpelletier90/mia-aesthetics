{
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpstan/phpstan": "^2.1",
    "wp-coding-standards/wpcs": "^3.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "php-stubs/wordpress-stubs": "^6.8",
    "php-stubs/acf-pro-stubs": "^6.4",
    "php-stubs/gravity-forms-stubs": "^2.9",
    "php-stubs/wordpress-seo-stubs": "^20.5",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "php-stubs/wp-cli-stubs": "^2.12",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "phpstan": "phpstan analyse --memory-limit=2G --no-progress",
    "phpcs:json": "sh -c 'mkdir -p reports && ./vendor/bin/phpcs -q --report=json > reports/phpcs.json || true'",
    "phpstan:json": "sh -c 'mkdir -p reports && ./vendor/bin/phpstan analyse -n --error-format=json > reports/phpstan.json || true'",
    "qa": "composer phpcbf && composer phpcs && composer phpstan",
    "qa:reports": "composer phpcs:json && composer phpstan:json"
  }
}
